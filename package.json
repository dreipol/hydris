{
  "name": "hydris",
  "version": "0.0.1",
  "description": "Generic node service to handle SSR for SPA made with any kind of frontend framework",
  "bin": {
    "hydris": "./bin/index.js"
  },
  "main": "hydris.js",
  "jsnext:main": "src/index.js",
  "module": "src/index.js",
  "scripts": {
    "prepare": "npm run build && npm test",
    "ci-test": "eslint -c .eslintrc --no-eslintrc -f junit ./ > reports/eslint.xml",
    "lint": "eslint ./",
    "build": "rollup -c",
    "demo": "node test/demo-server",
    "test": "npm run build && npm run lint && mocha test/index"
  },
  "files": [
    "hydris.js",
    "bin",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreipol/hydris.git"
  },
  "keywords": [
    "SSR",
    "server side rendering",
    "scraper",
    "puppeteer",
    "crawler"
  ],
  "author": "Gianluca Guarini <gianluca.guarini@gmail.com> (http://gianlucaguarini.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dreipol/hydris/issues"
  },
  "homepage": "https://github.com/dreipol/hydris#readme",
  "devDependencies": {
    "@dreipol/eslint-config": "^4.0.0",
    "eslint": "^4.18.2",
    "mocha": "^5.0.1",
    "rollup": "^0.57.1",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "dependencies": {
    "curri": "^1.0.0",
    "minimist": "^1.2.0",
    "puppeteer": "^1.2.0"
  }
}
